# ============================================================
# AO Trading Bot Configuration
# ============================================================

# Discord
DISCORD_TOKEN=Bot YOUR_TOKEN
CHANNEL_ID=1234567890

# Bybit V5 (API key needs Futures permissions)
BYBIT_API_KEY=xxxxx
BYBIT_API_SECRET=xxxxx
BYBIT_TESTNET=false
BYBIT_DEMO=false            # true for paper trading

# Trading
CATEGORY=linear
QUOTE=USDT
LEVERAGE=5
RISK_PCT=5                  # % of equity to risk per trade

# Risk / Limits
MAX_CONCURRENT_TRADES=3
MAX_TRADES_PER_DAY=20

# Entry rules
ENTRY_EXPIRATION_MIN=180              # entry expires after X minutes
ENTRY_TOO_FAR_PCT=0.5                 # skip if price too far past trigger
ENTRY_TRIGGER_BUFFER_PCT=0.0          # optional: move trigger slightly earlier
ENTRY_LIMIT_PRICE_OFFSET_PCT=0.00     # optional: make limit more aggressive
ENTRY_EXPIRATION_PRICE_PCT=0.6        # skip if price beyond this % from trigger

# SL/TP behavior
# Bot uses SL from signal first! This is only the safety fallback
INITIAL_SL_PCT=6.0                    # fallback SL % if signal has no SL (rare)
MOVE_SL_TO_BE_ON_TP1=true             # move SL to breakeven after TP1 hit

# TP splits (% of position per TP level)
# AO Trading: Use only 3 TPs, leave runner for trailing
# 30+30+30 = 90%, remaining 10% is runner
TP_SPLITS=30,30,30

# Fallback TP distances if signal has no TPs (% from entry)
FALLBACK_TP_PCT=0.85,1.65,4.0

# Trailing stop (activates after TP3)
TRAIL_AFTER_TP_INDEX=3                # start trailing after TP3 hit
TRAIL_DISTANCE_PCT=2.0                # trailing distance in %
TRAIL_ACTIVATE_ON_TP=true

# DCA sizing (multiplier vs base qty)
# AO Trading: Only 0-1 DCA per signal
# If signal has DCA, use 1.5x base qty
DCA_QTY_MULTS=1.5

# Polling Discord
POLL_SECONDS=15
POLL_JITTER_MAX=5

# Logging / Safety
DRY_RUN=true                          # IMPORTANT: set to false for live trading
LOG_LEVEL=INFO
STATE_FILE=state.json

# Google Sheets Export (optional)
# GOOGLE_SHEETS_CREDS=base64_encoded_json_key
# GOOGLE_SHEET_ID=spreadsheet_id_from_url
